<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.acuit.jointdistribution.activity.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00cc66">
   <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textSize="24sp"
    android:text="登录"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="51dp"
            app:srcCompat="@mipmap/icon_zh" />

        <EditText
            android:id="@+id/et_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@id/imageView2"
            android:ems="10"
            android:hint="请输入您的账号"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageView2"
            android:layout_below="@id/et_zh"
            android:layout_marginTop="28dp"
            app:srcCompat="@mipmap/icon_mm" />

        <EditText
            android:id="@+id/et_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/et_zh"
            android:layout_below="@id/et_zh"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="请输入您的密码"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_mm"
            android:layout_alignStart="@id/imageView3"
            android:layout_below="@+id/et_mm"
            android:layout_marginTop="56dp"
            android:background="#23b587"
            android:onClick="Login"
            android:text="登录" />


    </RelativeLayout>


</LinearLayout>
