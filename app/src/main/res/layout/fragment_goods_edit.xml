<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_supplierName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="秋葵"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:text="单价："
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:text="￥"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_unitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="88"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:text="需求数量："
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_goodsAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:text="1000"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_goodsUnit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="kg"
                    android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_amountEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_supplierName"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实收数量："
                android:textColor="#333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_reciverMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_minus"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/icon_input_minus" />

            <EditText
                android:id="@+id/et_reciverAmount"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_edittext_border"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="100"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/iv_reciverPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_plus"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/icon_input_plus" />

            <TextView
                android:id="@+id/tv_goodsUnit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Kg"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拒收数量："
                android:textColor="#333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_rejectMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_minus"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/icon_input_minus" />

            <EditText
                android:id="@+id/et_rejectAmount"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_edittext_border"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0.00"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/iv_rejectPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_plus"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/icon_input_plus" />

            <TextView
                android:id="@+id/tv_goodsUnit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Kg"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_rejectResion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ll_amountEdit"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒收原因："
                android:textColor="#333333"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_rejectResion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ll_rejectResion"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加照片："
                android:textColor="#333333"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_addPic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@mipmap/icon_addpic" />

                <ImageView
                    android:id="@+id/iv_addPic2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@mipmap/icon_addpic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_addPic3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@mipmap/icon_addpic"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#339866"
        android:clickable="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</RelativeLayout>