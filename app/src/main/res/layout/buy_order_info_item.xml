<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receive_info_list_stock_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:textColor="#0D0F11"
            android:text="商品名：" />

        <TextView
            android:id="@+id/tv_receive_info_list_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="16dp"
            android:textColor="#0D0F11"
            android:layout_weight="1"
            android:text="重量：" />

        <TextView
            android:id="@+id/tv_receive_info_list_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:textColor="#0D0F11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_receive_info_list_stock_name"
            android:layout_weight="1"
            android:text="单价：" />

    </LinearLayout>


</LinearLayout>
