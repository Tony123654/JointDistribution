<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"

        android:text="创建日期："
        android:textColor="#7C7C7C" />

    <TextView
        android:id="@+id/tv_dep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_day"
        android:layout_below="@id/tv_day"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/dizhi"
        android:text="东区食堂"
        android:drawablePadding="5dp"
        android:textColor="#7C7C7C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_jihua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_dep_name"
        android:layout_below="@id/tv_dep_name"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/icon_clock"
        android:drawablePadding="5dp"
        android:text="计划送达日期："
        android:textColor="#7C7C7C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_zongliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原需求量"
        android:textColor="#7C7C7C"
        android:layout_below="@+id/tv_jihua"
        android:layout_alignEnd="@+id/tv_day" />



    <RadioButton
        android:id="@+id/rb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#617079"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/txt_tab_selector" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_zongliang"
        android:layout_alignBottom="@id/tv_zongliang"
        android:layout_toEndOf="@id/tv_zongliang"
        android:text="11111"
        android:textColor="#7C7C7C" />


    <TextView
        android:id="@+id/tv_plan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_jihua"
        android:layout_toEndOf="@id/tv_jihua"
        android:text="555555"
        android:textColor="#7C7C7C" />
    <TextView
        android:id="@+id/tv_qian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变更后需求量"
        android:textColor="#7C7C7C"
        android:layout_alignBaseline="@+id/tv_total_amount"
        android:layout_alignBottom="@+id/tv_total_amount"
        android:layout_toEndOf="@+id/tv_jihua" />

    <TextView
        android:id="@+id/tv_total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_qian"
        android:layout_toEndOf="@id/tv_qian"
        android:text="222222"
        android:textColor="#7C7C7C" />
    <TextView
        android:id="@+id/tv_purchase_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7C7C7C"
        android:text="33333"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_purchase_dep_root_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7C7C7C"
        android:textSize="15sp"
        android:text="hehe"
        android:layout_above="@id/tv_jihua"
        android:layout_alignEnd="@id/tv_plan_date" />



</RelativeLayout>