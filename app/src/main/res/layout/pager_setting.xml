<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4FC39A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人中心"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout8"
        android:background="#339866">

        <TextView
            android:id="@+id/tv_depName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="杭州蔬菜物流有限公司"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="50dp"
            android:text="用户名"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout12"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_advice"
            style="@style/TextViewStyle_SettingsModel"
            android:text="意见反馈" />

        <TextView
            android:id="@+id/tv_modifyPwd"
            style="@style/TextViewStyle_SettingsModel"
            android:text="修改密码" />

        <TextView
            android:id="@+id/tv_aboutUs"
            style="@style/TextViewStyle_SettingsModel"
            android:text="关于我们" />

        <TextView
            android:id="@+id/tv_bindPhone"
            style="@style/TextViewStyle_SettingsModel"
            android:text="手机绑定" />

        <TextView
            android:id="@+id/tv_quit"
            style="@style/TextViewStyle_SettingsModel"
            android:text="退出登录" />

    </LinearLayout>


</RelativeLayout>