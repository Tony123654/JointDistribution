<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="19dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_edittext_green_radius_border"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/icon_import"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_newPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_border"
            android:gravity="top"
            android:hint="新密码需为6~20位的数字字母混合"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="5dp"
            android:textColorHint="#999999"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edittext_green_radius_border"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/icon_login_code"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_ensurePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_border"
            android:gravity="top"
            android:hint="两次新密码需一致"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="5dp"
            android:textColorHint="#999999"
            android:textSize="14sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_submitPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pwd"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button_check"
        android:gravity="center"
        android:text="提   交"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>
