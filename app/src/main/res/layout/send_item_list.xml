<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="制单日期："
            android:textColor="#7C7C7C" />

        <TextView
            android:id="@+id/tv_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111"
            android:textColor="#7C7C7C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_request_dep_strs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@mipmap/dizhi"
            android:drawablePadding="5dp"
            android:text="88888"
            android:textColor="#7C7C7C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_com_brief_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浙大"
            android:textColor="#7C7C7C" />

        <TextView
            android:id="@+id/tv_dep_root_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="紫金港"
            android:textColor="#7C7C7C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_clock"
            android:drawablePadding="5dp"
            android:text="计划送达日期："
            android:textColor="#7C7C7C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_plan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555555"
            android:textColor="#7C7C7C" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_receive_totao_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/lianxiren"
            android:drawablePadding="5dp"
            android:text="联系人："
            android:textColor="#7C7C7C" />

        <TextView
            android:id="@+id/tv_contact_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="姓名"
            android:textColor="#7C7C7C" />

        <TextView
            android:id="@+id/tv_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="电话"
            android:textColor="#7C7C7C" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="总数量："
            android:textColor="#7C7C7C" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textColor="#7C7C7C" />

    </LinearLayout>


</LinearLayout>