<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#33B688">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="首页"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_scan_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:drawablePadding="1dp"
            android:drawableTop="@mipmap/icon_nav_scan"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="扫码验收"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_messageCenter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:drawablePadding="1dp"
            android:drawableTop="@mipmap/icon_nav_msg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="消息"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>

    <include layout="@layout/page_home_storeman_head" />

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout9"
        android:background="#ffffff"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="采购入库"
            android:textColor="#666666" />

        <Button
            android:id="@+id/btn_checkOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textView13"
            android:layout_below="@id/textView13"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_home_ys"
            android:gravity="center"
            android:onClick="OrderForm"
            android:text="验收入库"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btn_evaluateOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btn_checkOrder"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/btn_checkOrder"
            android:background="#00000000"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_home_pjdd"
            android:gravity="center"
            android:onClick="OrderForm"
            android:text="评价订单"
            android:textColor="#333333"
            android:visibility="visible" />
        <!--*************************不可见👆***********************-->

    </RelativeLayout>

</LinearLayout>