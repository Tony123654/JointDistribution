<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4FC39A">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="首页"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_messageCenter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@mipmap/icon_dbox_msg_n" />

    </RelativeLayout>

    <include layout="@layout/page_home_storeman_head" />

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout9">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="采购入库" />

        <Button
            android:id="@+id/btn_checkOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textView13"
            android:layout_below="@id/textView13"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="OrderForm"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="验    收" />

        <Button
            android:id="@+id/btn_evaluateOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_checkOrder"
            android:layout_below="@+id/btn_checkOrder"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:onClick="OrderForm"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="评    价" />

    </RelativeLayout>

</LinearLayout>