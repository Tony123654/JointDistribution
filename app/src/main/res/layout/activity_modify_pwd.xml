<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Common.View.Activity.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorTitle">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@mipmap/icon_nav_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="19dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_edittext_green_radius_border"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/icon_import"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/shape_no_border"
                android:gravity="top"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="5dp"
                android:textColorHint="#999999"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_edittext_green_radius_border"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/icon_login_code"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_newPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/shape_no_border"
                android:gravity="top"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="5dp"
                android:textColorHint="#999999"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext_green_radius_border"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/icon_login_code"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_ensurePwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/shape_no_border"
                android:gravity="top"
                android:hint="确认新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="5dp"
                android:textColorHint="#999999"
                android:textSize="14sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_submitPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_pwd"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_check"
            android:gravity="center"
            android:text="提   交"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>
